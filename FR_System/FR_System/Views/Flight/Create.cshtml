@model FR_System.Models.Flight
@{
    ViewData["Title"] = "Create Flight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Add Flight Details</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<form method="post" asp-action="Create">
        @*<div class="form-group row">
           <h2 class="text-black-50 pl-3">Add Flight Details</h2>
        </div>*@
        <div class="form-group row">
            <label asp-for="FlightFrom" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FlightFrom" placeholder="Type City...">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FlightTo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FlightTo" placeholder="Type City...">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FlightDDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FlightDDate" placeholder="Select date" type="date" class="form-control">
                <i class="fas fa-calendar input-prefix" tabindex=0></i>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DTime" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DTime" placeholder="Select date" type="time" class="form-control">
                <i class="fas fa-clock-o input-prefix" tabindex=0></i>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PlaneId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="PlaneId" placeholder="Plane ID">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Price" placeholder="Price">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Add Flight" />
                </div>
                <div class="col">
                    <a class="btn btn-danger w-75" asp-action="Dashboard" asp-controller="Admin">Back</a>
                </div>
            </div>
         </div>
</form>
</div>
</div>
</div>