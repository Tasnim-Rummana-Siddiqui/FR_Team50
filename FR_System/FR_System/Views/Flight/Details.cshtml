@model IEnumerable<FR_System.Models.Flight>

<h1>Index-Flight Details</h1>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Flight Details List</h2>
		</div>
	</div>
	<br />

	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="wif=dth:100%">
			<thead>
				<tr>
					<th>Flight Id</th>
					<th>From City</th>
					<th>To City</th>
					<th>Departure Date</th>
					<th>Departure Time</th>
					<th>Plane ID</th>
					<th>Price</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
			   {
				   <tr>
					   <td width="10%">@item.FlightId</td>
					   <td width="10%">@item.FlightFrom</td>
					   <td width="10%">@item.FlightTo</td>
					   <td width="10%">@item.FlightDDate</td>
					   <td width="10%">@item.DTime</td>
					   <td width="10%">@item.PlaneId</td>
					   <td width="10%">@item.Price</td>
					   <td width="20%">
						   <div class="w-100 btn-group" role="group">
								<a asp-controller="Flight" asp-action="Update" asp-route-Id="@item.FlightId" class="btn btn-primary mx-1">Update Flight</a>
								<a asp-controller="Flight" asp-action="Delete" asp-route-Id="@item.FlightId" class="btn btn-danger mx-1">Delete Flight</a>
						   </div>
					   </td>
				   </tr>
			   }
			</tbody>
		</table>
	}
	else
	{
		<p>No flight details available.</p>
	}
</div>