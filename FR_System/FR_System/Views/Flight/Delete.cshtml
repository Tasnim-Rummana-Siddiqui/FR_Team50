@model FR_System.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Delete Flight</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<form method="post" asp-action="DeletePost">
        <div class="border p-3">
            @*<div class="form-group row">
                <h2 class="text-black-50 pl-3">Delete Flight Details</h2>
            </div>*@
            <div class="row">
                <div class="col-12">
                    <div hidden class="form-group row">
                        <label asp-for="FlightId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="FlightId">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FlightFrom" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" disabled class="form-control" asp-for="FlightFrom">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FlightTo" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" disabled class="form-control" asp-for="FlightTo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FlightDDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FlightDDate" disabled type="date" class="form-control">
                            <i class="fas fa-calendar input-prefix" tabindex=0></i>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DTime" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="DTime" disabled placeholder="Select date" type="time" class="form-control">
                            <i class="fas fa-clock-o input-prefix" tabindex=0></i>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PlaneId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" disabled class="form-control" asp-for="PlaneId" placeholder="Plane ID">
                        </div>
                    </div>
                  <div class="form-group row">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" disabled class="form-control" asp-for="Price" placeholder="Price">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-75" value="Delete Flight" />
                            </div>
                            <div class="col">
                                <a class="btn btn-success w-75" asp-action="Dashboard" asp-controller="Admin">Back</a>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
        
        
</form>

</div>
			</div>
		</div>
