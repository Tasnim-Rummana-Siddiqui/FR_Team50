@model FR_System.Models.Plane

<form method="post" asp-action="Create">
        <div class="form-group row">
           <h2 class="text-black-50 pl-3">Add Plane Details</h2>
        </div>
        <div class="form-group row">
            <label asp-for="PlaneName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="PlaneName" placeholder="Enter plane Name...">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Seats" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Seats" placeholder="Enter number of seats...">
            </div>
        </div>
             <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Add Flight" />
                </div>
                <div class="col">
                    <a class="btn btn-danger w-75" asp-action="Dashboard" asp-controller="Admin">Back</a>
                </div>
            </div>
         </div>
</form>
