@model FR_System.Models.Plane

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
			<div class="main-page">
				<h2 class="title1">Delete Flight</h2>
				<div class="blank-page widget-shadow scroll" id="style-2 div1">
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlaneName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlaneName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seats)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlaneID" />
        <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-75" value="Delete Flight" />
                            </div>
                            <div class="col">
                                <a class="btn btn-success w-75" asp-action="Details" asp-controller="Plane">Back</a>
                            </div>
                        </div>
                     </div>
    </form>
</div>
</div>
</div>
</div>